        </activity>
        <activity
            android:name=".SimpleList1Activity"
            android:label="@string/title_activity_simple_list1" />
        <activity
            android:name=".SimpleList2Activity"
            android:label="@string/title_activity_simple_list2" />
        <activity
            android:name=".SimpleList3Activity"
            android:label="@string/title_activity_simple_list3" />
        <activity
            android:name=".MyWords"
            android:label="@string/title_activity_my_words" />
        <activity
            android:name=".MyWordsRecyclerViewActivity"
            android:label="@string/title_activity_my_words_recycler_view" >
        </activity>
    </application>

</manifest>
